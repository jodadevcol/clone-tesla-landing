---
import { ButtonTheme, SectionTheme } from "@typests/*";

import Layout from "@layout/Layout.astro";

import Button from "@components/Button.astro";
import ButtonBox from "@components/ButtonBox.astro";
import HomeTop from "@components/HomeTop.astro";
import HomeContent from "@components/HomeContent.astro";
import TitleContent from "@components/TitleContent.astro";
---

<Layout title="Electric Cars, Solar & Clean Energy | Tesla">
	<div class="relative w-full h-screen overflow-auto snap-y snap-mandatory">
		<div class="snap-start">
			<HomeTop />
		</div>

		<div class="snap-start">
			<HomeContent imageFile="/homepage-model-s-desktop.avif">
				<div slot="information">
					<TitleContent>Model S</TitleContent>

					<div class="px-5 py-2">
						<a class="text-current" href="#">Explore Inventory</a>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Custom Order" theme={ButtonTheme.LIGTH} />
					<Button btnText="Demo Drive" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent imageFile="/homepage-model-3-desktop.avif">
				<div slot="information" class="text-black">
					<TitleContent>Model 3</TitleContent>

					<div class="px-5 py-2">
						<p class="text-current">
							Starting at $32,740 <br />
							After Federal Tax Credit
						</p>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Custom Order" theme={ButtonTheme.LIGTH} />
					<Button btnText="Demo Drive" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent
				themeColor={SectionTheme.BLACK}
				imageFile="/homepage-model-x-desktop.avif"
			>
				<div slot="information">
					<TitleContent>Model X</TitleContent>

					<div class="px-5 py-2">
						<a class="text-current" href="#">Explore Inventory</a>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Custom Order" theme={ButtonTheme.LIGTH} />
					<Button btnText="Demo Drive" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent
				themeColor={SectionTheme.BLACK}
				imageFile="/homepage-model-y-desktop.avif"
			>
				<div slot="information">
					<TitleContent>Model Y</TitleContent>

					<div class="px-5 py-2">
						<p class="text-current">
							Starting at $40,240 <br />
							After Federal Tax Credit
						</p>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Custom Order" theme={ButtonTheme.LIGTH} />
					<Button btnText="Demo Drive" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent
				themeColor={SectionTheme.BLACK}
				imageFile="/homepage-solarroof-desktop.avif"
			>
				<div slot="information">
					<TitleContent>Solar Roof</TitleContent>

					<div class="px-5 py-2">
						<p class="text-current">Produce Clean Energy From Your Roof</p>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Order Now" theme={ButtonTheme.LIGTH} />
					<Button btnText="Learn More" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent
				themeColor={SectionTheme.BLACK}
				imageFile="/homepage-solarpanels-desktop.avif"
			>
				<div slot="information">
					<TitleContent>Solar Panels</TitleContent>

					<div class="px-5 py-2">
						<a href="#">Schedule a Virtual Consultation</a>
					</div>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Order Now" theme={ButtonTheme.LIGTH} />
					<Button btnText="Learn More" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>

		<div class="snap-start">
			<HomeContent
				themeColor={SectionTheme.BLACK}
				imageFile="/homepage-powerwall-desktop.avif"
			>
				<div slot="information">
					<TitleContent>Powerwall</TitleContent>
				</div>

				<ButtonBox slot="call-to-action">
					<Button btnText="Order Now" theme={ButtonTheme.LIGTH} />
					<Button btnText="Learn More" theme={ButtonTheme.DARK} />
				</ButtonBox>
			</HomeContent>
		</div>
	</div>
</Layout>
